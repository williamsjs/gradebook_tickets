<p id="notice"><%= notice %></p>

<h1>Listing Assignments</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.name %></td>
        <td><%= assignment.due %></td>
        <div class="btn-group" role="group" aria-label="...">
          <td><button type="button" class="btn btn-default"><%= link_to 'Show', assignment %></button></td>
          <td><button type="button" class="btn btn-default"><%= link_to 'Edit', edit_assignment_path(assignment) %></button></td>
          <td><button type="button" class="btn btn-default"><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-default"><%= link_to 'New Assignment', new_assignment_path %></button>
  <button type="button" class="btn btn-default"><%= link_to 'Home', root_path %></button>
</div>
